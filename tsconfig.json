{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es6",
      "allowJs": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "paths": {
        "@scripts/*": ["./src/scripts/*"],
        "@styles/*": ["./src/styles/*"],
        "@assets/*": ["./src/assets/*"],
        "@/*": ["./src/*"],
      }
    }
}